# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=sentinela_db

# TypeORM Settings
# WARNING: Never set DB_SYNCHRONIZE=true in production!
DB_SYNCHRONIZE=false
DB_LOGGING=true
DB_AUTO_LOAD_ENTITIES=true

# JWT Authentication
# WARNING: Change JWT_SECRET to a strong random string in production!
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=24h
